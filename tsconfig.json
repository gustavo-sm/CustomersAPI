{
    "compilerOptions": {
        "outDir": "dist/",
        "noEmitOnError": true,
        "target": "ES6",
        "moduleResolution" : "Node",
        "esModuleInterop" : true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}